<%= form_for @match, url: tournament_match_path(@tournament, @match) do |f_match| %>
  <h2 class="text-center"><%= @match.table.name %></h2>
  <%= f_match.fields_for :scores do |f_scores| %>
    <%= f_scores.label :user %>
    <%= f_scores.text_field :value, value: f_scores.object.user.get_player_full_name, disabled: true %>
    <%= f_scores.label :score %>
    <%= f_scores.text_field :value, type: 'number' %>
  <% end %>
  <%= f_match.submit :update %>
<% end %>
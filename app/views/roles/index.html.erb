<div class="container">
  <div class="col-xs-12 text-center"><h1>Listing roles</h1></div>
    <div class="container-fluid table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th class="text-right">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td><%= role.name %></td>
                <td class="text-right">
                  <%= link_to 'Show', role, class: "btn btn-info btn-xs" %>
                  <%= link_to 'Edit', edit_role_path(role), class: "btn btn-warning btn-xs" %>
                  <%= link_to 'Delete', role, method: :delete,
                              data: { confirm: 'Are You sure?' }, class: "btn btn-danger btn-xs" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  <div class="text-center"><%= link_to 'New Role', new_role_path, class: "btn btn-primary" %></div>
</div>
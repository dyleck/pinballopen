<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-md-offset-3">
      <%= form_for :session, url: login_path, class: 'form-group' do |f| %>
        <%= f.label :email, 'Enter your email', for: :email %>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.label :password, 'Enter your password', for: :password %>
        <%= f.text_field :password, type: :password, class: 'form-control' %>
        <%= f.submit 'Login', class: 'btn btn-primary form-control' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <%= form_for(@user, html: { class: 'form-horizontal', role: 'form' } ) do |f| %>

<!--email-->
    <%= form_with_error_handling(:email) { f.text_field(:email, class: 'form-control') } %>

<!--first_name-->
    <%= form_with_error_handling(:first_name) { f.text_field :first_name, class: 'form-control'} %>

<!--last_name-->
    <%= form_with_error_handling(:last_name) { f.text_field :last_name, class: 'form-control' } %>

<!--Nationality-->
      <%= form_with_error_handling(:nationality_id) { f.select :nationality_id,
                                                                options_for_select(Nationality.all.map { |n| [n.name, n.id]}),
                                                                {}, { class: 'form-control select-picker'} } %>

<!--password-->
      <%= form_with_error_handling(:password) { f.password_field :password, class: 'form-control'} %>

<!--password_confirmation-->
      <%= form_with_error_handling(:password_confirmation) { f.password_field :password_confirmation, class: 'form-control' } %>

<!--submit-->
    <div class="actions text-center">
      <%= f.submit 'Register', class: 'btn btn-primary' %>
    </div>

  <% end %>
</div>
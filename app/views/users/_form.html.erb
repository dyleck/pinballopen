<div class="container">
  <%= form_for(@user, html: { class: 'form-horizontal', role: 'form' } ) do |f| %>

    <%= form_with_error_handling(:email) { f.text_field(:email, class: 'form-control input-sm') } %>
    <%= form_with_error_handling(:first_name) { f.text_field :first_name, class: 'form-control input-sm'} %>
    <%= form_with_error_handling(:last_name) { f.text_field :last_name, class: 'form-control input-sm' } %>
    <%= form_with_error_handling(:nationality_id) { f.select :nationality_id,
                                                              options_for_select(Nationality.all.map { |n| [n.name, n.id]}),
                                                              {}, { class: 'form-control select-picker'} } %>
    <%= form_with_error_handling(:password) { f.password_field :password, class: 'form-control input-sm'} %>
    <%= form_with_error_handling(:password_confirmation) { f.password_field :password_confirmation, class: 'form-control input-sm' } %>
    <div class="actions text-center">
      <%= f.submit 'Register', class: 'btn btn-primary' %>
    </div>

  <% end %>
</div>
<div class="container">
<div class="col-lg-6">
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <td>Name</td>
        <td>Nationality</td>
        <td>Roles</td>
        <td>Activated?</td>
        <td>Actions</td>
      </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name + ' ' + user.last_name %></td>
            <td><%= image_tag user.nationality.flag_img_path, class: 'flag_class' %></td>
            <td class="roles">
              <ul>
                <% user.roles.each do |role| %>
                    <li><%= role.name %></li>
                <% end %>
              </ul>
            </td>
            <td class="activated">
              <%= user.active? %>
            </td>
            <td>
              <%= link_to 'Show', user, class: 'btn btn-info btn-xs' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-xs' %>
<!--
              <%= link_to 'Destroy', user, method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-danger btn-xs' %>
-->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-large' %>
</div>
  <!--<div class="col-lg-6">test</div>-->
</div>
